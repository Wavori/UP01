class Автор:
    def __init__(self, фИО: str, страна: str):
        """
        Инициализирует объект Автор.

        фИО - полное имя автора
        страна - страна проживания автора
        """
        self.фИО = фИО
        self.страна = страна

    def информация_об_авторе(self):
        """
        Выводит информацию об авторе.
        """
        print(f"Автор: {self.фИО}, Страна: {self.страна}")

class Книга:
    def __init__(self, названиеКниги: str):
        """
        Инициализирует объект Книга.

        названиеКниги - название книги
        """
        self.названиеКниги = названиеКниги
        self.__содержание = []
        print(f"Книга {self.названиеКниги} создана")

    def __del__(self):
        """
        Деструктор, выводит сообщение при удалении книги.
        """
        print(f"Книга {self.названиеКниги} удалена")

    def добавить_произведение(self, название: str):
        """
        Добавляет произведение в содержание книги.

        название - название произведения
        """
        self.__содержание.append(название)

    def количество_произведений(self):
        """
        Возвращает количество произведений в книге.
        """
        return len(self.__содержание)

    def информация_о_книге(self):
        """
        Выводит информацию о книге и её содержании.
        """
        print(f"Книга: {self.названиеКниги}")
        print("Содержание:")
        for i, название in enumerate(self.__содержание, start=1):
            print(f"{i}) {название}")

class КнигаАвтора(Автор, Книга):
    def __init__(self, фИО: str, страна: str, названиеКниги: str):
        """
        Инициализирует объект КнигаАвтора.

        фИО - полное имя автора
        страна - страна проживания автора
        названиеКниги - название книги
        """
        Автор.__init__(self, фИО, страна)
        Книга.__init__(self, названиеКниги)

    def информация_о_книге_и_авторе(self):
        """
        Выводит информацию о книге, авторе и содержании книги.
        """
        self.информация_об_авторе()
        self.информация_о_книге()

# Основная программа
def main():
    # Создание списка авторов
    N = int(input("Введите количество авторов: "))
    авторы = []
    for _ in range(N):
        фИО = input("Введите ФИО автора: ")
        страна = input("Введите страну автора: ")
        автор = Автор(фИО, страна)
        авторы.append(автор)

    # Вывод всех авторов
    print("\nСписок всех авторов:")
    for автор in авторы:
        автор.информация_об_авторе()

    # Вывод только русских авторов
    print("\nСписок русских авторов:")
    for автор in авторы:
        if автор.страна.lower() == "россия":
            автор.информация_об_авторе()

    # Пример использования класса КнигаАвтора
    книга_автора = КнигаАвтора("Лев Толстой", "Россия", "Война и мир")
    книга_автора.добавить_произведение("Том 1")
    книга_автора.добавить_произведение("Том 2")
    книга_автора.информация_о_книге_и_авторе()

if __name__ == "__main__":
    main()
