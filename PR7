def hello(name=None):
    """
    Выводит приветственное сообщение.
    name - имя, которое будет использовано в приветствии (по умолчанию: None)
    """
    if name:
        print(f"Hello, {name}")
    else:
        print("Hello, World")

def arithmetic(a, b, operation):
    """
    Выполняет арифметическую операцию над двумя числами.
    a - первое число
    b - второе число
    operation - операция, которую нужно выполнить (+, -, *, /)
    """
    if operation == '+':
        return a + b
    elif operation == '-':
        return a - b
    elif operation == '*':
        return a * b
    elif operation == '/':
        if b != 0:
            return a / b
        else:
            return "Деление на ноль невозможно"
    else:
        return "Неизвестная операция"

def square(side):
    """
    Возвращает периметр, площадь и диагональ квадрата.
    side - длина стороны квадрата
    """
    perimeter = 4 * side
    area = side ** 2
    diagonal = side * (2 ** 0.5)
    return perimeter, area, diagonal

def season(month):
    """
    Определяет время года по номеру месяца.
    month - номер месяца (от 1 до 12)
    """
    if month in [12, 1, 2]:
        return "зима"
    elif month in [3, 4, 5]:
        return "весна"
    elif month in [6, 7, 8]:
        return "лето"
    elif month in [9, 10, 11]:
        return "осень"
    else:
        return "Некорректный номер месяца"

def bank(a, years):
    """
    Вычисляет сумму на счету через определенное количество лет.
    a - начальная сумма вклада
    years - количество лет
    """
    for _ in range(years):
        a *= 1.10
    return a

# Тестирование функций
if __name__ == "__main__":
    hello("Алиса")
    print(arithmetic(10, 5, '+'))
    print(square(4))
    print(season(3))
    print(bank(1000, 5))
